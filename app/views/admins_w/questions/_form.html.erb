<%= form_with(model: [ :admins_w, question ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>
  <div class="form-group">
    <%= form.label :subject_id %>
    <%= form.select :subject_id, @subject_options, {include_blank: "Selecione.."}, class: "form-select" %>
  </div>
  </br>
  <%= form.submit nil, class: "btn btn-primary", data: {confirm: 'Deseja prosseguir com essa ação ?'} %>
<% end %>
</br>
<%= link_to 'Voltar', admins_w_questions_path, class: "btn btn-dark"%>