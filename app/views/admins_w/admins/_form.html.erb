<div style="border:4px solid #eeeeee;width: 40%;padding:20px;margin:0 auto;">
<%= form_with(model: [ :admins_w, admin ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class: "form-control" %>
  </div></br>
  <%= form.submit nil, class: "btn btn-primary", data: {confirm: 'Deseja prosseguir com essa ação ?'} %>
<% end %>
</br>
<%= link_to t('btn.back'), admins_w_admins_path, class: "btn btn-dark"%>
</div>